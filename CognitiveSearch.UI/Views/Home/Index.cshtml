@{
    ViewData["Title"] = "Home";
}


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<div>
    <div class="content">
        <form method="get" asp-controller="Home" asp-action="Search">
            <div class="form-group">
                <label id="search-label">Search</label>
                <div id="search-input-group" class="input-group">
                    <input type="text" class="form-control advancedAutoComplete" name="q" id="index-search-input" placeholder="What are you searching for today?" autocomplete="off">
                    <span class="input-group-btn">
                        <button id="index-search-submit" class="btn btn-default" type="submit"><span class="ms-Icon ms-Icon--Search"></span></button>
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>
